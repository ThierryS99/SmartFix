@{
    ViewData["Title"] = "Cadastro de máquinas";
}
<!DOCTYPE html>
<html>
<head>
    <title>Tela de Cadastro</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container h2 {
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
            }

            .form-group input[type="text"],
            .form-group select {
                width: 100%;
                padding: 5px;
                font-size: 16px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            .form-group select {
                height: 30px;
            }

            .form-group .status-label {
                font-weight: normal;
            }

                .form-group .status-label span {
                    margin-left: 5px;
                }

                .form-group .status-label input[type="radio"] {
                    margin-right: 5px;
                }

                    .form-group .status-label input[type="radio"]:last-child {
                        margin-right: 0;
                    }

            .form-group .btn-submit {
                width: 100%;
                padding: 10px;
                font-size: 16px;
                border: none;
                background-color: #4CAF50;
                color: white;
                cursor: pointer;
                border-radius: 4px;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Tela de Cadastro</h2>
        <form>
            <div class="form-group">
                <label for="codigo">Código de Identificação:</label>
                <input type="text" id="codigo" name="codigo" required>
            </div>
            <div class="form-group">
                <label for="horas">Horas de Funcionamento:</label>
                <input type="text" id="horas" name="horas" required>
            </div>
            <div class="form-group">
                <label for="status">Status:</label>
                <label class="status-label">
                    <input type="radio" name="status" value="ativo" required>
                    Ativo
                </label>
                <label class="status-label">
                    <input type="radio" name="status" value="inativo" required>
                    Inativo
                </label>
            </div>
            <input type="submit" value="PROCESSAR" class="btn-submit">
        </form>
    </div>
</body>
</html>