<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

@model SetorModel
@{
    ViewData["Title"] = "Cadastro de setor";
}

<br />

<div class="text-center">
    <h1 class="display-6">CADASTRO DE SETOR</h1>
    <p></p>
</div>

<form asp-controller="CadastroSetor" asp-action="CadastroSetorView" method="post">

    <div class="form-group">
        <input type="hidden" asp-for="Id" class="form-control" placeholder="Informe o código do produto.">

        <label for="Nome">Nome do Setor:</label>
        <input type="text" required="true" style="text-transform:uppercase" asp-for="Nome" class="form-control" placeholder="Informe o nome do setor.">

        <br />

        <button type="submit" data-toggle="modal" data-target="#myModal" class="btn btn-primary">PROCESSAR</button>

        <div class="btn-group" role="group">
            <a role="button" class="btn btn-secondary" asp-controller="Home" asp-action="Index">CANCELAR</a>
        </div>

        <div class="modal fade" id="myModal">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">

                    <!-- Cabeçalho do Popup -->
                    <div class="modal-header">
                        <h4 class="modal-title">Cadastro de Setor</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Corpo do Popup -->
                    <div class="modal-body">
                        <p>Setor cadastrado com sucesso!</p>
                    </div>

                    <!-- Rodapé do Popup -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    </div>

                </div>
            </div>
        </div>

    </div>

</form>